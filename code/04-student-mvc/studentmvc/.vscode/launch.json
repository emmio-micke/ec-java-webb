{
    "configurations": [
        {
            "type": "java",
            "name": "Launch MVCPattern",
            "request": "launch",
            "mainClass": "com.example.MVCPattern",
            "projectName": "studentmvc"
        },
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/app": "${workspaceRoot}/app"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}